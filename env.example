# ZAP MCP Server - Environment Configuration
# Copy this file to .env and modify as needed

# ZAP Configuration
ZAP_PORT=8080
ZAP_BASE=http://127.0.0.1:8080
ZAP_AUTOSTART=true
ZAP_SESSION_NAME=zap_docker_session
ZAP_SESSION_STRATEGY=unique
ZAP_LOG_LEVEL=INFO
ZAP_STARTUP_TIMEOUT=120
ZAP_LONG_SCAN_TIMEOUT=14400

# MCP Server Configuration
ZAP_MCP_HOST=0.0.0.0
ZAP_MCP_PORT=8082
ZAP_MCP_PATH=/mcp

# Container Configuration
CONTAINER_NAME=zap-custom-mcp
